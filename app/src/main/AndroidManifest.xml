<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.san.kir.manger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".components.main.Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".components.library.LibraryActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.category.CategoryActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.storage.StorageActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.sitesCatalog.SiteCatalogActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.downloadManager.DownloadManagerActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.latestChapters.LatestChapterActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.viewer.ViewerActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            />
        <activity
            android:name=".components.listChapters.ListChaptersActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            />

        <activity
            android:name=".components.catalogForOneSite.CatalogForOneSiteActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".components.addManga.AddMangaActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="stateHidden"
            />
        <activity
            android:name=".components.settings.SettingActivity"
            android:label="@string/main_menu_settings"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".components.schedule.ScheduleActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.schedule.AddEditPlannedTaskActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:windowSoftInputMode="stateHidden"
            />
        <activity
            android:name=".components.statistics.StatisticActivity"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".components.statistics.StatisticItemActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            />

        <service
            android:name=".components.catalogForOneSite.CatalogForOneSiteUpdaterService"
            />
        <service
            android:name=".components.downloadManager.DownloadService"
            />
        <service
            android:name=".utils.MangaUpdaterService"
            />
    </application>

</manifest>
